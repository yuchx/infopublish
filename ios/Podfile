# ios/Podfile  —— Flutter 项目通用稳定版
platform :ios, '15.5'                  # 如需更低可改为 '12.0'（两处保持一致）

use_frameworks! :linkage => :static    # 静态链接，兼容大多数 Flutter 插件
use_modular_headers!

ENV['COCOAPODS_DISABLE_STATS'] = 'true'
require File.expand_path(File.join('Flutter', 'podhelper'), __dir__)
# Xcode 构建配置映射（保持默认即可）
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}
flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    flutter_additional_ios_build_settings(t)
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'  # 与上面一致
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['SWIFT_VERSION'] ||= '5.0'
    end
  end
end
